<% layout('layouts/boilerplate')%>
    <div id="map" style="width: 100%; height: 500px"></div>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campgrounds</a>
    </div>
    <% for(let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=campground.images[0].url%>">
                        <% } else { %>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/dhpowrohp/image/upload/v1645362170/YelpCamp/v8cgbsnmxmdo7ezlcqs3.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%=campground.title%>
                        </h4>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <h5 class="card-text">
                            <small>
                                <%=campground.location%>
                            </small>
                        </h5>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View <%=campground.title%>
                                </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                // const mapToken = {process.env.MAPBOX_TOKEN};
                const campgrounds = {features:<%- JSON.stringify(campgrounds) %>}
            </script>

            <script src="/javascripts/clusterMap.js"></script>